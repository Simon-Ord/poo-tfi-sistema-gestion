<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);" 
            stylesheets="@../css/styleUsuariosDark.css"
            xmlns="http://javafx.com/javafx/24.0.1" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unpsjb.poo.controller.ProductosVistaControlador">

    <!--  Encabezado -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" 
                   text="Gestión de Productos" />
        </HBox>
    </top>

    <!--  Contenido central -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <!--  Contenedor tipo tarjeta -->
            <VBox alignment="CENTER" prefWidth="900" spacing="15" 
                  style="-fx-background-color: rgba(255,255,255,0.1);
                         -fx-background-radius: 15;
                         -fx-border-color: rgba(255,255,255,0.2);
                         -fx-border-radius: 15;
                         -fx-padding: 25;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0.3, 0, 4);">

                <!-- Filtros y búsqueda -->
                <HBox alignment="CENTER_RIGHT" prefWidth="820" spacing="10">
                    <HBox prefHeight="25.0" prefWidth="412.0">
                        <children>
                            <CheckBox fx:id="chBoxInactivos" mnemonicParsing="false" 
                                      text="Mostrar productos inactivos" textFill="WHITE">
                                <tooltip>
                                    <Tooltip text="Muestra también los productos que están inactivos."/>
                                </tooltip>
                            </CheckBox>
                        </children>
                    </HBox>
                    <TextField fx:id="txtBuscar" prefWidth="300" promptText="Buscar por cualquier campo">
                        <tooltip>
                            <Tooltip text="Ingrese una palabra clave para buscar productos por cualquier campo"/>
                        </tooltip>
                    </TextField>
                    <Button onAction="#limpiarBusqueda" styleClass="btn-secundario" text="Limpiar">
                        <tooltip>
                            <Tooltip text="Borra el texto de búsqueda y muestra todos los productos nuevamente."/>
                        </tooltip>
                    </Button>
                </HBox>

                <!-- Tabla de productos -->
                <TableView fx:id="tablaProductos" prefHeight="360" prefWidth="820" 
                           style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colCodigo" prefWidth="58.0" text="Código" />
                        <TableColumn fx:id="colNombre" prefWidth="127.0" text="Nombre" />
                        <TableColumn fx:id="colDescripcion" prefWidth="220.0" text="Descripción" />
                        <TableColumn fx:id="colCategoria" prefWidth="110.0" text="Categoría" />
                        <TableColumn fx:id="colPrecio" prefWidth="83.0" text="Precio" />
                        <TableColumn fx:id="colCantidad" prefWidth="73.0" text="Stock" />
                        <TableColumn fx:id="colEstado" prefWidth="50.0" text="Estado" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="15">
                    <Button fx:id="btnDetalles" mnemonicParsing="false" onAction="#detallesProducto" text="Detalles">
                        <tooltip>
                            <Tooltip text="Muestra información detallada del producto seleccionado."/>
                        </tooltip>
                    </Button>

                    <Button onAction="#agregarProducto" styleClass="btn-accion" text="Agregar Producto">
                        <tooltip>
                            <Tooltip text="Permite registrar un nuevo producto en el sistema."/>
                        </tooltip>
                    </Button>

                    <Button fx:id="btnModificarProducto" mnemonicParsing="false" onAction="#modificarProducto" text="Modificar Producto">
                        <tooltip>
                            <Tooltip text="Abre el formulario para editar los datos del producto seleccionado."/>
                        </tooltip>
                    </Button>

                    <Button onAction="#cambiarEstadoProducto" styleClass="btn-accion" text="Activar/Desactivar Producto">
                        <tooltip>
                            <Tooltip text="Activa o desactiva el producto seleccionado según su estado actual."/>
                        </tooltip>
                    </Button>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
