<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" style="-fx-padding: 20;"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    
    <VBox spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" 
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <Label style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="3. Confirmar Venta y Pago" />

        <VBox spacing="5.0" style="-fx-border-color: #888; -fx-padding: 15;">
            <Label style="-fx-font-weight: bold;" text="RESUMEN DE VENTA" />
            <Label fx:id="lblTipoFacturaResumen" text="Tipo de Factura: B (Consumidor Final)" />
            <Label fx:id="lblClienteResumen" text="Cliente: Consumidor Final" />
            <Label fx:id="lblMontoSinIVAResumen" text="Subtotal sin IVA: $ 0.00" />
            <Label fx:id="lblIVAResumen" text="Monto IVA (21%): $ 0.00" />
        </VBox>

        <VBox spacing="10.0" style="-fx-border-color: #00bcd4; -fx-padding: 15;">
            <Label style="-fx-font-size: 14pt; -fx-font-weight: bold;" text="Método de Pago (Strategy)" />
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <Label text="Seleccionar Estrategia:" />
                <ComboBox fx:id="cbMetodoPago" promptText="Seleccione el método" /> 
            </HBox>
            <Label fx:id="lblComision" style="-fx-text-fill: orange;" text="Comisión/Descuento: +0.00%" />
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10.0">
            <Label style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: red;" text="TOTAL FINAL:" />
            <Label fx:id="lblTotalFinal" style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: green;" text="$ 0.00" />
        </HBox>

        <Button text="REGISTRAR VENTA Y EMITIR TICKET" onAction="#handleFinalizarVenta" 
                prefWidth="300.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14pt;" />

    </VBox>
</AnchorPane>