<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="456.0" prefWidth="874.0"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unpsjb.poo.controller.ProductosVistaControlador">

    <left>
        <VBox alignment="TOP_CENTER" prefHeight="456.0" prefWidth="550.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="0.0" prefWidth="526.0">
                    <children>
                        <ImageView fitHeight="26.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../images/lupa.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" top="5.0"/>
                            </HBox.margin>
                        </ImageView>
                        <TextField prefHeight="25.0" prefWidth="133.0">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>

                <!-- fx:id añadido para que se inyecte en el controller -->
                <TableView fx:id="tablaProductos" prefHeight="456.0" prefWidth="526.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colCodigo" text="Codigo"/>
                        <TableColumn fx:id="colNombre" text="Nombre"/>
                        <TableColumn fx:id="colPrecio" text="Precio"/>
                        <TableColumn fx:id="colCantidad" text="Cantidad"/>
                        <TableColumn fx:id="colDescripcion" text="Descripción"/>
                        <TableColumn fx:id="colCategoria" text="Categoria"/>
                        <TableColumn fx:id="colFabricante" text="Fabricante"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </left>

    <right>
        <BorderPane prefHeight="456.0" prefWidth="401.0" BorderPane.alignment="CENTER">
            <top>
                <VBox alignment="TOP_CENTER" prefHeight="70.0" prefWidth="309.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Productos">
                            <font>
                                <Font name="System Bold" size="20.0"/>
                            </font>
                        </Label>
                        <HBox alignment="CENTER" prefHeight="41.0" prefWidth="303.0">
                            <children>
                                <Button fx:id="btnRegistrar" mnemonicParsing="false" onAction="#btnRegistrarAction" text="Registrar">
                                    <HBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="btnModificar" mnemonicParsing="false" onAction="#btnModificarAction" text="Modificar">
                                    <HBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="btnEliminar" mnemonicParsing="false" onAction="#btnEliminarAction" text="Eliminar">
                                    <HBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                    </HBox.margin>
                                </Button>
                                <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#btnCancelarAction" text="Cancelar">
                                    <HBox.margin>
                                        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </top>

            <center>
                <VBox prefHeight="386.0" prefWidth="326.0" BorderPane.alignment="TOP_LEFT">
                    <children>
                        <Label text="Codigo">
                            <font><Font name="System Bold" size="12.0"/></font>
                            <VBox.margin><Insets left="1.0"/></VBox.margin>
                        </Label>
                        <TextField fx:id="txtCodigo">
                            <VBox.margin><Insets left="1.0" right="5.0"/></VBox.margin>
                        </TextField>

                        <Label text="Nombre">
                            <font><Font name="System Bold" size="12.0"/></font>
                            <VBox.margin><Insets left="1.0"/></VBox.margin>
                        </Label>
                        <TextField fx:id="txtNombre">
                            <VBox.margin><Insets left="1.0" right="5.0"/></VBox.margin>
                        </TextField>

                        <Label text="Precio">
                            <font><Font name="System Bold" size="12.0"/></font>
                            <VBox.margin><Insets left="1.0"/></VBox.margin>
                        </Label>
                        <TextField fx:id="txtPrecio">
                            <VBox.margin><Insets left="1.0" right="5.0"/></VBox.margin>
                        </TextField>

                        <Label text="Cantidad">
                            <font><Font name="System Bold" size="12.0"/></font>
                            <VBox.margin><Insets left="1.0"/></VBox.margin>
                        </Label>
                        <TextField fx:id="txtCantidad">
                            <VBox.margin><Insets left="1.0" right="5.0"/></VBox.margin>
                        </TextField>

                        <Label text="Descripcón">
                            <font><Font name="System Bold" size="12.0"/></font>
                            <VBox.margin><Insets left="1.0"/></VBox.margin>
                        </Label>
                        <TextField fx:id="txtDescripcion">
                            <VBox.margin><Insets left="1.0" right="5.0"/></VBox.margin>
                        </TextField>

                        <Label text="Fabricante">
                            <font><Font name="System Bold" size="12.0"/></font>
                            <VBox.margin><Insets left="1.0"/></VBox.margin>
                        </Label>
                        <TextField fx:id="txtFabricante">
                            <VBox.margin><Insets left="1.0" right="5.0"/></VBox.margin>
                        </TextField>

                        <HBox alignment="CENTER" prefHeight="37.0" prefWidth="309.0">
                            <children>
                                <!-- fx:id añadidos para inyección -->
                                <ComboBox fx:id="cbCategoria" prefWidth="111.0" promptText="Categoria">
                                    <HBox.margin><Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/></HBox.margin>
                                </ComboBox>
                                <Button fx:id="btnAgregarCategoria" mnemonicParsing="false"
                                        onAction="#AgregarCategoriaAction" prefHeight="20.0" prefWidth="28.0" text="+"/>

                                <ComboBox fx:id="cbFabricante" prefWidth="111.0" promptText="Fabricante">
                                    <HBox.margin><Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/></HBox.margin>
                                </ComboBox>
                                <Button fx:id="btnAgregarFabricante" mnemonicParsing="false"
                                        onAction="#AgregarFabricanteAction" text="+"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </right>
</BorderPane>
