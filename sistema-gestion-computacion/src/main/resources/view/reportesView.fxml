<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unpsjb.poo.controller.ReportesController"
      spacing="12" padding="15" style="-fx-background-color: linear-gradient(to right, #1c1f2b, #242a3a);">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Usuario:" style="-fx-text-fill: white;"/>
        <TextField fx:id="txtUsuario" promptText="Buscar por usuario"/>
        <Label text="Entidad:" style="-fx-text-fill: white;"/>
        <TextField fx:id="txtEntidad" promptText="usuarios, productos, etc."/>
        <Label text="Acción:" style="-fx-text-fill: white;"/>
        <TextField fx:id="txtAccion" promptText="CREATE, UPDATE, DELETE"/>
        <Button text="Buscar" onAction="#buscar" style="-fx-background-color: #4a6fff; -fx-text-fill: white; -fx-background-radius: 8;"/>
         <Button text="Exportar CSV" onAction="#exportarCSV" style="-fx-background-color: #4a6fff; -fx-text-fill: white; -fx-background-radius: 8;"/>
    </HBox>

    <TableView fx:id="tablaReportes" prefHeight="400" style="-fx-background-color: white; -fx-border-radius: 10;">
        <columns>
            <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
            <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="120"/>
            <TableColumn fx:id="colAccion" text="Acción" prefWidth="140"/>
            <TableColumn fx:id="colEntidad" text="Entidad" prefWidth="120"/>
            <TableColumn fx:id="colDetalles" text="Detalles" prefWidth="300"/>
        </columns>
    </TableView>
</VBox>
