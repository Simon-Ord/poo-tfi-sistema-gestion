<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="582.0" prefWidth="649.0" style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);" 
stylesheets="@../css/styleUsuariosDark.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
fx:controller="com.unpsjb.poo.controller.CategoriasVistaControlador">


    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" text="Gestión de Categorías" />
        </HBox>
    </top>


    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>


            <VBox alignment="CENTER" prefWidth="700" spacing="15" style="-fx-background-color: rgba(255,255,255,0.1);                          -fx-background-radius: 15;                          -fx-border-color: rgba(255,255,255,0.2);                          -fx-border-radius: 15;                          -fx-padding: 25;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0.3, 0, 4);">

               
                <HBox alignment="CENTER_RIGHT" prefWidth="620" spacing="10">
                    <HBox prefHeight="25.0" prefWidth="292.0">
                        <children>
                            <CheckBox fx:id="chBoxInactivas" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Mostrar categorías inactivas" textFill="WHITE">
                                <tooltip>
                                    <Tooltip text="Muestra también las categorías que están inactivas."/>
                                </tooltip>
                            </CheckBox>
                        </children>
                    </HBox>
                    <TextField fx:id="txtBuscar" prefHeight="25.0" prefWidth="129.0" promptText="Buscar categoría" />
                    <Button onAction="#buscarCategorias" styleClass="btn-accion" text="Buscar" />
                    <Button onAction="#limpiarBusqueda" styleClass="btn-secundario" text="Limpiar" />
                </HBox>

                
                <TableView fx:id="tablaCategorias" prefHeight="360" prefWidth="620" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colNombre" prefWidth="308.0" text="Nombre" />
                        <TableColumn fx:id="colFechaCreacion" prefWidth="205.0" text="Fecha Creación" />
                        <TableColumn fx:id="colEstado" prefWidth="133.0" text="Estado" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

               
                <HBox alignment="CENTER" spacing="15">
                    <Button onAction="#agregarCategoria" styleClass="btn-accion" text="Agregar Categoría" />
                    <Button fx:id="btnModificarCategoria" mnemonicParsing="false" onAction="#modificarCategoria" text="Modificar Categoría" />
                    <Button onAction="#cambiarEstadoCategoria" styleClass="btn-accion" text="Activar/Desactivar Categoría" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
