<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox fx:id="hboxLogin" 
      prefHeight="406.0" prefWidth="675.0"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unpsjb.poo.controller.LoginVistaControlador"
      stylesheets="@css/styleLogin.css">

   <children> 
      <!-- Panel izquierdo -->
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0" spacing="15">
         <children>

            <!-- Título principal -->
            <Label text="Iniciar Sesión" style="-fx-text-fill: white;">
               <font>
                  <Font name="System Bold" size="33.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="40.0" />
               </VBox.margin>
            </Label>

            <VBox spacing="12">
               <children>
                  <!-- Campo Usuario -->
                  <Label text="Usuario:" style="-fx-text-fill: #d0d0d0;">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtUser" 
                             onKeyTyped="#eventKey" 
                             prefHeight="35.0"
                             promptText="Ej:nombre_usuario"
                             style="-fx-background-radius: 8; -fx-padding: 5 10;"/>

                  <!-- Campo Contraseña -->
                  <Label text="Contraseña:" style="-fx-text-fill: #d0d0d0;">
                     <font>
                        <Font size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <PasswordField fx:id="txtPassword" 
                                 onKeyTyped="#eventKey" 
                                 prefHeight="35.0"
                                 promptText="contraseña"
                                 style="-fx-background-radius: 8; -fx-padding: 5 10;"/>

                  <!-- Botones alineados -->
                  <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10 0 0 0;">
                     <Button fx:id="btnLogin" text="Ingresar" 
                             onAction="#btnLoginAction"
                             style="-fx-background-color: #3a7af7; 
                                    -fx-text-fill: white; 
                                    -fx-font-weight: bold; 
                                    -fx-background-radius: 10;" />
                  </HBox>

                  <!-- Comentario explicativo -->
                  <Label text="Ingrese sus datos para acceder al sistema."
                         style="-fx-text-fill: #aaaaaa; 
                                -fx-font-size: 12px; 
                                -fx-alignment: center;"
                         wrapText="true" />
               </children>
            </VBox>
         </children>
         <HBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </HBox.margin>
      </VBox>

      <!-- Panel derecho con imagen -->
      <VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0">
         <children>
            <ImageView fitHeight="280.0" fitWidth="280.0" preserveRatio="true">
               <image>
                  <Image url="@../images/login2.png" />
               </image>
            </ImageView>

            <Label text="Sistema de Gestión"
                   style="-fx-text-fill: white; 
                          -fx-font-size: 16px; 
                          -fx-font-weight: bold; 
                          -fx-padding: 15 0 0 0;" />
         </children>
      </VBox>
   </children>
</HBox>
