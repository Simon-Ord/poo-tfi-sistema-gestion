<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);     -fx-padding: 25;     -fx-background-radius: 10;" 
xmlns="http://javafx.com/javafx/24.0.1" 
xmlns:fx="http://javafx.com/fxml/1"
fx:controller="com.unpsjb.poo.controller.DetallesProductoControlador">

	<!-- Título -->
	<Label style="-fx-font-size: 22px; -fx-text-fill: white; -fx-font-weight: bold;" text="Detalles del Producto" />

	<!-- Contenido principal -->
	<TextArea fx:id="txtDetalles" editable="false" prefHeight="400.0" prefWidth="500.0" 
		style="-fx-background-color: #2c3142; -fx-text-fill: white; -fx-control-inner-background: #2c3142;" 
		wrapText="true" />

	<!-- Botón -->
	<HBox alignment="CENTER" spacing="20">
		<Button fx:id="btnCerrar" onAction="#cerrar" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;         -fx-background-radius: 10; -fx-padding: 8 18;" text="Cerrar" />
	</HBox>

</VBox>
