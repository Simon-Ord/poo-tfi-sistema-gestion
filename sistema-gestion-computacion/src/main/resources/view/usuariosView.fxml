<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unpsjb.poo.controller.UsuariosController"
            stylesheets="@styleUsuarios.css">

    <!-- 🔝 Título superior -->
    <top>
        <Label text="Gestión de Usuarios"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets top="10" bottom="10" />
            </BorderPane.margin>
        </Label>
    </top>

    <!-- 📋 Centro: tabla + botones -->
    <center>
        <VBox spacing="15" prefWidth="750" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <!-- 🔹 Tabla de usuarios -->
            <TableView fx:id="tablaUsuarios" prefHeight="330" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50" />
                    <TableColumn fx:id="colLegajo" text="Legajo" prefWidth="100" />
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="150" />
                    <TableColumn fx:id="colUsuario" text="Usuario" prefWidth="150" />
                    <TableColumn fx:id="colRol" text="Rol" prefWidth="100" />
                    <TableColumn fx:id="colContrasena" text="Contraseña" prefWidth="150" />
                    <TableColumn fx:id="colEstado" text="Activo" prefWidth="80" />
                </columns>
            </TableView>

            <!-- 🔘 Botones -->
            <HBox spacing="8" alignment="CENTER">
                <Button text="Agregar Usuario" onAction="#agregarUsuario" />
                <Button text="Modificar Usuario" onAction="#modificarUsuario" />
                <Button text="Eliminar Usuario" onAction="#eliminarUsuario" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
