<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #9CADFF;" stylesheets="@css/styleusuariosView.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unpsjb.poo.controller.UsuariosController">   

    <top>
        <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Gestión de Usuarios" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10" top="10" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox alignment="CENTER" prefWidth="750" spacing="15" styleClass="content-card">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <TableView fx:id="tablaUsuarios" prefHeight="330" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colLegajo" prefWidth="100" text="Legajo" />
                    <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                    <TableColumn fx:id="colUsuario" prefWidth="150" text="Usuario" />
                    <TableColumn fx:id="colRol" prefWidth="100" text="Rol" />
                    <TableColumn fx:id="colContraseña" prefWidth="150" text="Contraseña" />
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="8">
                <Button fx:id="btnAgregarUsuario" onAction="#agregarUsuario" text="Agregar Usuario" />
                <Button fx:id="btnModificarUsuario" onAction="#modificarUsuario" text="Modificar Usuario" />
                <Button fx:id="btnEliminarUsuario" onAction="#eliminarUsuario" text="Eliminar Usuario" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
