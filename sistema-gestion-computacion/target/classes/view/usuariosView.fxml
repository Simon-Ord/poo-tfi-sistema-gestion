<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unpsjb.poo.controller.UsuariosVistaControlador"
            stylesheets="@../css/styleUsuariosDark.css"
            style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);">

    <!-- ðŸ”¹ Encabezado -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label text="GestiÃ³n de Usuarios"
                   style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- ðŸ”¹ Contenido central -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="10" right="20" bottom="20" left="20" />
            </padding>

            <!-- Contenedor tipo tarjeta -->
            <VBox spacing="15" prefWidth="750" alignment="CENTER"
                  style="-fx-background-color: rgba(255,255,255,0.1);
                         -fx-background-radius: 15;
                         -fx-border-color: rgba(255,255,255,0.2);
                         -fx-border-radius: 15;
                         -fx-padding: 25;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0.3, 0, 4);">

                <!-- Tabla -->
                <TableView fx:id="tablaUsuarios" prefHeight="330" prefWidth="700"
                           style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colDni" text="DNI" prefWidth="100" />
                        <TableColumn fx:id="colNombre" text="Nombre y apellido" prefWidth="200" />
                        <TableColumn fx:id="colRol" text="Rol" prefWidth="120" />
                        <TableColumn fx:id="colActivo" text="Activo" prefWidth="100" />
                    </columns>
                </TableView>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="15">
                    <Button text="Agregar Usuario" onAction="#agregarUsuario" styleClass="btn-accion" />
                    <Button text="Activar/Desactivar Usuario" onAction="#cambiarEstadoUsuario" styleClass="btn-accion" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
