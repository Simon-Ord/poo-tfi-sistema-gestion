<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);"
            stylesheets="@../css/styleUsuariosDark.css"
            xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.unpsjb.poo.controller.UsuariosVistaControlador">

    <!-- 游댳 Encabezado -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;"
                   text="Gesti칩n de Usuarios" />
        </HBox>
    </top>

    <!-- 游댳 Contenido central -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <!-- Contenedor tipo tarjeta -->
            <VBox alignment="CENTER" prefWidth="750" spacing="15"
                  style="-fx-background-color: rgba(255,255,255,0.1);
                         -fx-background-radius: 15;
                         -fx-border-color: rgba(255,255,255,0.2);
                         -fx-border-radius: 15;
                         -fx-padding: 25;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0.3, 0, 4);">

                <!-- Tabla -->
                <TableView fx:id="tablaUsuarios" prefHeight="330" prefWidth="700"
                           style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colDni" prefWidth="100" text="DNI" />
                        <TableColumn fx:id="colNombre" prefWidth="200" text="Nombre y Apellido" />
                        <TableColumn fx:id="colRol" prefWidth="120" text="Rol" />
                        <TableColumn fx:id="colActivo" prefWidth="100" text="Activo" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>

                    <!-- Tooltip general para la tabla -->
                    <tooltip>
                        <Tooltip text="Aqu칤 se muestran todos los usuarios registrados del sistema. 
Puede ver su DNI, nombre, rol y si est치n activos o no." />
                    </tooltip>
                </TableView>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="15">

                    <!--  Bot칩n: Agregar Usuario -->
                    <Button onAction="#agregarUsuario" styleClass="btn-accion" text="Agregar Usuario">
                        <tooltip>
                            <Tooltip text="Permite registrar un nuevo usuario en el sistema. 
Debe completar los datos del usuario y asignarle un rol." />
                        </tooltip>
                    </Button>

                    <!--  Bot칩n: Activar / Desactivar Usuario -->
                    <Button onAction="#cambiarEstadoUsuario" styleClass="btn-accion" text="Activar/Desactivar Usuario">
                        <tooltip>
                            <Tooltip text="Activa o desactiva al usuario seleccionado. 
Un usuario desactivado no podr치 acceder al sistema." />
                        </tooltip>
                    </Button>

                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
