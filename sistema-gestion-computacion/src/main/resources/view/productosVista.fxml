<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);" stylesheets="@../css/styleUsuariosDark.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unpsjb.poo.controller.ProductosVistaControlador">

    <!--  Encabezado -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" text="Gesti贸n de Productos" />
        </HBox>
    </top>

    <!--  Contenido central -->
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            <!-- Contenedor tipo tarjeta -->
            <VBox alignment="CENTER" prefWidth="900" spacing="15" style="-fx-background-color: rgba(255,255,255,0.1);                          -fx-background-radius: 15;                          -fx-border-color: rgba(255,255,255,0.2);                          -fx-border-radius: 15;                          -fx-padding: 25;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0.3, 0, 4);">

                <!-- (Opcional) Barra de b煤squeda -->
                <HBox alignment="CENTER_RIGHT" prefWidth="820" spacing="10">
                    <TextField fx:id="txtBuscar" prefWidth="300" promptText="Buscar por nombre o c贸digo" />
                    <Button onAction="#buscarProductos" styleClass="btn-accion" text="Buscar" />
                    <Button onAction="#limpiarBusqueda" styleClass="btn-secundario" text="Limpiar" />
                </HBox>

                <!-- Tabla -->
                <TableView fx:id="tablaProductos" prefHeight="360" prefWidth="820" style="-fx-background-color: transparent;">
                    <columns>
                        <TableColumn fx:id="colCodigo" prefWidth="58.0" text="C贸digo" />
                        <TableColumn fx:id="colNombre" prefWidth="127.0" text="Nombre" />
                        <TableColumn fx:id="colDescripcion" prefWidth="249.0" text="Descripci贸n" />
                        <TableColumn fx:id="colCategoria" prefWidth="124.0" text="Categor铆a" />
                        <TableColumn fx:id="colFabricante" prefWidth="109.0" text="Fabricante" />
                        <TableColumn fx:id="colPrecio" minWidth="0.0" prefWidth="67.0" text="Precio" />
                        <TableColumn fx:id="colCantidad" prefWidth="57.0" text="Stock" />
                  <TableColumn fx:id="colActivo" prefWidth="56.0" text="Activo" />
                    </columns>
                </TableView>

                <!-- Botones -->
                <HBox alignment="CENTER" spacing="15">
                    <Button onAction="#agregarProducto" styleClass="btn-accion" text="Agregar Producto" />
               <Button fx:id="btnEliminarProducto" mnemonicParsing="false" onAction="#eliminarProducto" text="Eliminar Producto" />
               <Button fx:id="btnModificarProducto" mnemonicParsing="false" onAction="#modificarProducto" text="Modificar Producto" />
                    <Button onAction="#cambiarEstadoProducto" styleClass="btn-accion" text="Activar/Desactivar Producto" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
