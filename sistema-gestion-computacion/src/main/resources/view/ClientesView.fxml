<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #1c1f2b, #242a3a);" stylesheets="@../css/styleUsuariosDark.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unpsjb.poo.controller.ClientesVistaControlador">

    
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 26px; -fx-text-fill: white; -fx-font-weight: bold;" text="Gestión de Clientes" />
        </HBox>
    </top>

    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets bottom="20" left="20" right="20" top="10" />
            </padding>

            
            <VBox alignment="CENTER" prefWidth="750" spacing="15" style="-fx-background-color: rgba(255,255,255,0.1);                          -fx-background-radius: 15;                          -fx-border-color: rgba(255,255,255,0.2);                          -fx-border-radius: 15;                          -fx-padding: 25;                          -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 15, 0.3, 0, 4);">

                <!-- Filtros -->
                <HBox alignment="CENTER_LEFT" prefWidth="700" spacing="10">
                    <CheckBox fx:id="chBoxInactivos" mnemonicParsing="false" text="Mostrar clientes inactivos" textFill="WHITE">
                        <tooltip>
                            <Tooltip text="Muestra también los clientes que están inactivos." />
                        </tooltip>
                    </CheckBox>
                </HBox>

                
                <TableView fx:id="tablaClientes" prefHeight="330" prefWidth="700" style="-fx-background-color: transparent;">
                    <columns>
                        
                        <TableColumn fx:id="colNombre" prefWidth="160" text="Nombre" />
                        <TableColumn fx:id="colCuit" prefWidth="100" text="CUIT" />
                        <TableColumn fx:id="colTelefono" prefWidth="96.0" text="Teléfono" />
                        <TableColumn fx:id="colEmail" prefWidth="153.0" text="Email" />
                        <TableColumn fx:id="colTipo" prefWidth="130.0" text="Tipo de Cliente" />
                        <TableColumn fx:id="colEstado" prefWidth="50" text="Estado" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>

                
                <HBox alignment="CENTER" spacing="15">
                    <Button onAction="#agregarCliente" styleClass="btn-accion" text="Agregar Cliente" />
                    <Button onAction="#editarCliente" styleClass="btn-accion" text="Editar Cliente" />
                    <Button onAction="#eliminarCliente" styleClass="btn-accion" text="Eliminar/Ocultar Cliente" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
