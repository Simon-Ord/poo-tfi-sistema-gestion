<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" style="-fx-padding: 20;" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.unpsjb.poo.controller.FacturaVistaControlador">
    
    <children>
        <VBox spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <Label style="-fx-font-size: 18pt; -fx-font-weight: bold;" text="3. Confirmar Venta y Pago" />

                <VBox spacing="5.0" style="-fx-border-color: #888; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14pt;" text="RESUMEN DE VENTA" />
                        <Separator prefWidth="200.0" />
                        
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Tipo de factura:" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblTipoFacturaResumen" text="[Ticket o Factura]" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT">
                            <children>
                                <Label text="Cliente:" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblClienteResumen" text="[Consumidor final o Razón social]" />
                            </children>
                        </HBox>
                        
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Label fx:id="lblMontoSinIVAResumen" text="Subtotal sin IVA: $ 0.00 " />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Label fx:id="lblIVAResumen" text="Monto IVA (21%): $ 0.00" />
                            </children>
                        </HBox>
                        
                        <Label text="Productos de la operacion:" />
                        
                        <ScrollPane fx:id="scrollPaneItems" fitToWidth="true" prefHeight="100.0">
                            <content>
                                <VBox fx:id="vboxItemsLista" /> 
                            </content>
                        </ScrollPane>
                    </children>
                </VBox>

                <VBox spacing="10.0" style="-fx-border-color: #00bcd4; -fx-padding: 15;">
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Método de Pago" />
                        <HBox prefHeight="30.0">
                            <children>
                                <ComboBox fx:id="cbMetodoPago" onAction="#handleMetodoPagoSelected" prefWidth="150.0" promptText="Seleccione el método" />
                                <Label fx:id="lblComisionPago" text="Comision/Descuento: +0.00%">
                                    <HBox.margin>
                                        <Insets left="15.0" />
                                    </HBox.margin>
                                </Label>
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Label style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: red;" text="TOTAL FINAL:" />
                        <Label fx:id="lblTotalFinal" style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #4CAF50;" text="$ 0.00" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnRegistrarVenta" onAction="#handleRegistrarVenta" text="Registrar venta" />
                        <Button fx:id="btnExportarPDF" onAction="#handleExportarPDF" text="Exportar PDF" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>