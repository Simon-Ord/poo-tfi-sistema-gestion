<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20"
      styleClass="fondo-principal"
      stylesheets="@css/reportes.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unpsjb.poo.controller.ReportesControlador">

    <!-- 🔹 Título -->
    <Label styleClass="titulo-principal" text="📊 Auditoría y Reportes del Sistema">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <!-- 🔍 Panel de búsqueda -->
    <GridPane hgap="15" vgap="10" styleClass="panel-busqueda">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="60" prefWidth="80" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
            <ColumnConstraints hgrow="NEVER" minWidth="60" prefWidth="80" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
        </columnConstraints>

        <Label styleClass="etiqueta" text="Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0">
            <font><Font size="18.0" /></font>
        </Label>
        <TextField fx:id="txtUsuario" promptText="Buscar por usuario"
                   styleClass="campo-texto" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label styleClass="etiqueta" text="Acción:" GridPane.columnIndex="2" GridPane.rowIndex="0">
            <font><Font size="18.0" /></font>
        </Label>
        <TextField fx:id="txtAccion" promptText="Crear, modificar, Eliminar,iniciar/cerrar sesion"
                   styleClass="campo-texto" GridPane.columnIndex="3" GridPane.rowIndex="0" />

        <Label styleClass="etiqueta" text="Entidad:" GridPane.columnIndex="0" GridPane.rowIndex="1">
            <font><Font size="18.0" /></font>
        </Label>
        <TextField fx:id="txtEntidad" promptText="usuarios, productos,sesion ."
                   styleClass="campo-texto" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <HBox alignment="CENTER_LEFT" spacing="10"
              GridPane.columnIndex="3" GridPane.rowIndex="1">
            <Button onAction="#buscar" styleClass="boton-accion" text="Buscar" />
            <Button onAction="#exportarPDF" styleClass="boton-accion" text="Exportar PDF" />
        </HBox>

        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

    <!-- 🧾 Tabla dentro de ScrollPane -->
    <ScrollPane fitToWidth="true" fitToHeight="true"
                hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                VBox.vgrow="ALWAYS">

        <TableView fx:id="tablaReportes" styleClass="tabla-reportes"
                   tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">

            <columns>
                <TableColumn fx:id="colFecha" prefWidth="160.0" text="Fecha y Hora" />
                <TableColumn fx:id="colUsuario" prefWidth="120.0" text="Usuario" />
                <TableColumn fx:id="colAccion" prefWidth="160.0" text="Acción" />
                <TableColumn fx:id="colEntidad" prefWidth="120.0" text="Entidad" />
                <TableColumn fx:id="colDetalles" prefWidth="700.0" text="Descripción / Detalles" />
            </columns>

        </TableView>
    </ScrollPane>

</VBox>
