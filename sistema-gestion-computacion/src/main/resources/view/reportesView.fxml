<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20"
      styleClass="fondo-principal"
      stylesheets="@css/reportes.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unpsjb.poo.controller.ReportesControlador">

    <Label styleClass="titulo-principal" text="📊 Auditoría y Reportes del Sistema">
        <font><Font size="22.0" /></font>
    </Label>

    <!--  PANEL DE FILTROS ORGANIZADO -->
<GridPane hgap="15" vgap="12" styleClass="panel-busqueda">
    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="100" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
        <ColumnConstraints hgrow="NEVER" minWidth="80" prefWidth="100" />
        <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
    </columnConstraints>

    <!--  FILA 1: Fechas -->
    <Label styleClass="etiqueta" text="📆 Desde:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <DatePicker fx:id="dpDesde" promptText="Seleccione fecha inicial"
                GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label styleClass="etiqueta" text="📆 Hasta:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
    <DatePicker fx:id="dpHasta" promptText="Seleccione fecha final"
                GridPane.columnIndex="3" GridPane.rowIndex="0" />

    <!-- FILA 2: Usuario y Acción -->
    <Label styleClass="etiqueta" text="👤 Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="txtUsuario" promptText="ej:Alexis,Simon,Elias,Marcos.."
               GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label styleClass="etiqueta" text="🛠️ Acción:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
    <TextField fx:id="txtAccion" promptText="Ej: Crear, Modificar, Eliminar..."
               GridPane.columnIndex="3" GridPane.rowIndex="1" />

    <!--  FILA 3: Entidad + Botones -->
    <Label styleClass="etiqueta" text="📦 Entidad:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="txtEntidad" promptText="Ej: Usuario, Producto, Sesión..."
               GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <HBox alignment="CENTER_LEFT" spacing="12"
          GridPane.columnIndex="3" GridPane.rowIndex="2">
        <Button onAction="#buscar" styleClass="boton-accion" text="🔍 Buscar" />
        <Button onAction="#exportarPDF" styleClass="boton-accion" text="📄 Exportar PDF" />
    </HBox>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>
</GridPane>


    <!-- TABLA -->
    <ScrollPane fitToWidth="true" fitToHeight="true"
                hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                VBox.vgrow="ALWAYS">

        <TableView fx:id="tablaReportes" styleClass="tabla-reportes"
                   tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colFecha" prefWidth="160.0" text="📅 Fecha y Hora" />
                <TableColumn fx:id="colUsuario" prefWidth="120.0" text="👤 Usuario" />
                <TableColumn fx:id="colAccion" prefWidth="160.0" text="⚙️ Acción" />
                <TableColumn fx:id="colEntidad" prefWidth="120.0" text="📦 Entidad" />
                <TableColumn fx:id="colDetalles" prefWidth="700.0" text="📝 Descripción / Detalles" />
            </columns>
        </TableView>
    </ScrollPane>

    <Label text="Puede combinar filtros. Ejemplo: buscar 'crear' en acción y 'producto' en entidad,fecha y luego generar PDF."
           styleClass="texto-ayuda" />
</VBox>
