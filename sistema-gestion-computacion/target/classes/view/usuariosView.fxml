<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.unpsjb.poo.controller.UsuariosController">

    <center>
        <VBox prefWidth="722.0" spacing="10">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>

            <!-- Tabla de usuarios -->
            <TableView fx:id="tablaUsuarios" prefHeight="305.0" prefWidth="682.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colNombre" prefWidth="150" text="Nombre" />
                    <TableColumn fx:id="colUsuario" prefWidth="150" text="Usuario" />
                    <TableColumn fx:id="colRol" prefWidth="100" text="Rol" />
                    <TableColumn fx:id="colContrasena" prefWidth="150.0" text="Contraseña" />
                    <TableColumn fx:id="colEstado" prefWidth="80" text="Activo" />
                </columns>
            </TableView>

            <!-- Botones -->
            <HBox spacing="10">
                <Button onAction="#agregarUsuario" text="Agregar Usuario" />
                <Button onAction="#modificarUsuario" text="Modificar Usuario" />
                <Button onAction="#eliminarUsuario" text="Eliminar Usuario" />
                <Button onAction="#cargarUsuarios" text="Refrescar" />
            </HBox>
        </VBox>
    </center>
   <top>

            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Gestión de Usuarios" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
