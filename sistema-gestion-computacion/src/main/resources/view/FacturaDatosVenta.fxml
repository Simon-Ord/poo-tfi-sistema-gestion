<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #f5f5f5; -fx-padding: 20;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    
    <VBox layoutX="40.0" layoutY="22.0" spacing="20.0" AnchorPane.bottomAnchor="58.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" AnchorPane.topAnchor="22.0">

        <Label style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="2. Seleccionar Tipo de Factura">
           <padding>
              <Insets bottom="5.0" />
           </padding>
        </Label>
        <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20;">
            <children>
                <Label style="-fx-font-size: 14pt; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Seleccione el Tipo de Factura:" />
                <HBox spacing="15.0">
                    <children>
                        <ComboBox fx:id="cbTipoFactura" onAction="#handleTipoFacturaSelected" promptText="Tipo de Factura" 
                                 style="-fx-font-size: 13pt; -fx-pref-width: 200; -fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-background-radius: 4;" />
                    </children>
                </HBox>
            </children>
        </VBox>

      <VBox fx:id="panelDatosCliente" prefHeight="200.0" prefWidth="100.0" spacing="15.0" 
           style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 20;">
         <children>
            <Label style="-fx-font-size: 15pt; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Datos del Cliente (Factura)" />
            <GridPane hgap="15.0" vgap="15.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label style="-fx-font-size: 13pt; -fx-text-fill: #34495e;" text="CUIT/DNI:" />
                  <TextField fx:id="txtCuitDni" GridPane.columnIndex="1" 
                            style="-fx-font-size: 13pt; -fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-background-radius: 4;" />
                  <Label style="-fx-font-size: 13pt; -fx-text-fill: #34495e;" text="Nombre/Razón Social:" GridPane.rowIndex="1" />
                  <TextField fx:id="txtRazonSocial" GridPane.columnIndex="1" GridPane.rowIndex="1" 
                            style="-fx-font-size: 13pt; -fx-border-color: #bdc3c7; -fx-border-radius: 4; -fx-background-radius: 4;" />
                  <Button fx:id="btnCargarCliente" mnemonicParsing="false" onAction="#handleCargarCliente" text="✓ Cargar Cliente" 
                         GridPane.columnIndex="1" GridPane.rowIndex="2" 
                         style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12pt; -fx-background-radius: 4; -fx-cursor: hand;" />
                  <Label fx:id="lblEstadoCliente" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="3" 
                        style="-fx-font-size: 12pt; -fx-font-weight: bold;" />
               </children>
            </GridPane>
         </children>
      </VBox>
        
    </VBox>
     
    <HBox layoutX="68.0" layoutY="466.0" spacing="15.0" alignment="CENTER_RIGHT" 
         style="-fx-background-color: white; -fx-background-radius: 8; -fx-padding: 15;" 
         AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0">
        <children>
            <Label style="-fx-font-size: 16pt; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Total de Venta:" />
            <Label fx:id="lblTotalVenta" style="-fx-font-size: 18pt; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="$ 0.00" />
        </children>
    </HBox>
</AnchorPane>
