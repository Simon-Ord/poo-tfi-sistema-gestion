<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20"
      styleClass="fondo-principal"
      stylesheets="@css/reportes.css"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.unpsjb.poo.controller.ReportesControlador">

  
    <Label styleClass="titulo-principal" text="📊 Auditoría y Reportes del Sistema">
        <font><Font size="22.0" /></font>
    </Label>

  
    <GridPane hgap="15" vgap="10" styleClass="panel-busqueda">
        <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="60" prefWidth="80" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
            <ColumnConstraints hgrow="NEVER" minWidth="60" prefWidth="80" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="150" prefWidth="200" />
        </columnConstraints>

       
        <Label styleClass="etiqueta" text="👤 Usuario:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="txtUsuario"
                   promptText="nombre del usuario (ej: Alexis,Simon,Elias,Marcos..)"
                   GridPane.columnIndex="1" GridPane.rowIndex="0">
            <tooltip>
                <Tooltip text="Filtra los registros según el nombre del usuario que realizó la acción." />
            </tooltip>
        </TextField>

        
        <Label styleClass="etiqueta" text="🛠️ Acción:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
        <TextField fx:id="txtAccion"
                   promptText="Ej: Crear, Modificar, Eliminar, Iniciar Sesión..."
                   GridPane.columnIndex="3" GridPane.rowIndex="0">
            <tooltip>
                <Tooltip text="Indique el tipo de acción que desea buscar (crear, modificar, eliminar...)" />
            </tooltip>
        </TextField>

       
        <Label styleClass="etiqueta" text="📦 Entidad:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtEntidad"
                   promptText="Ej: Usuario, Producto, Sesión..."
                   GridPane.columnIndex="1" GridPane.rowIndex="1">
            <tooltip>
                <Tooltip text="Filtra los registros según la entidad afectada (usuario, producto, sesión...)" />
            </tooltip>
        </TextField>

       
        <HBox alignment="CENTER_LEFT" spacing="10"
              GridPane.columnIndex="3" GridPane.rowIndex="1">
            <Button onAction="#buscar" styleClass="boton-accion" text="🔍 Buscar">
                <tooltip>
                    <Tooltip text="Realiza la búsqueda según los filtros ingresados." />
                </tooltip>
            </Button>

            <Button onAction="#exportarPDF" styleClass="boton-accion" text="📄 Exportar PDF">
                <tooltip>
                    <Tooltip text="Guarda los resultados actuales en un archivo PDF." />
                </tooltip>
            </Button>
        </HBox>

        <rowConstraints>
            <RowConstraints />
            <RowConstraints />
        </rowConstraints>
    </GridPane>

     
    <ScrollPane fitToWidth="true" fitToHeight="true"
                hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                VBox.vgrow="ALWAYS">

        <TableView fx:id="tablaReportes" styleClass="tabla-reportes"
                   tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colFecha" prefWidth="160.0" text="📅 Fecha y Hora" />
                <TableColumn fx:id="colUsuario" prefWidth="120.0" text="👤 Usuario" />
                <TableColumn fx:id="colAccion" prefWidth="160.0" text="⚙️ Acción" />
                <TableColumn fx:id="colEntidad" prefWidth="120.0" text="📦 Entidad" />
                <TableColumn fx:id="colDetalles" prefWidth="700.0" text="📝 Descripción / Detalles" />
            </columns>
        </TableView>
    </ScrollPane>

    
    <Label text=" Puede combinar filtros. Ejemplo: buscar 'crear' en acción y 'producto' en entidad.Y te lo podes hacer un PDF"
           styleClass="texto-ayuda" />

</VBox>
